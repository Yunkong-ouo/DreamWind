{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with g++ (C++20)",
      "type": "shell",
      "command": "D:\\mingw64\\bin\\g++.exe",
      "args": [
        "-std=c++20",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "使用 g++ 建置並支援 C++20"
    }
  ]
}
